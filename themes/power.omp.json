{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",   
    "console_title": true,
    "console_title_style": "path",
    "final_space": true,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "path",
                    "style": "diamond",
                    "background": "p:path-background",
                    "foreground": "p:foreground",                    
                    "leading_diamond": "\uE0B2",
                    "trailing_diamond": "\uE0B0",
                    "properties": {
                        "prefix": " \uE5FF ",
                        "style": "folder"
                    }
                },
                {
                    "type": "az",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "background": "p:azure-background",
                    "foreground": "p:foreground",                    
                    "properties": {
                        "prefix": " \uFD03 ",
                        "template": "{{ .Name }}"                      
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "background": "p:git-background",
                    "foreground": "p:foreground",                   
                    "properties": {    
                        "fetch_status": true,
                        "fetch_upstream_icon": true
                    }
                },
                {
                    "type": "dotnet",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "background": "p:dotnet-background",
                    "foreground": "p:foreground",                    
                    "properties": {
                        "prefix": " îœŒ "
                    }
                },
                {
                    "type": "executiontime",
                    "style": "plain",
                    "background": "p:exectime-background",
                    "foreground": "p:foreground",                    
                    "properties": {
                      "always_enabled": true,
                      "prefix": "<transparent>\uE0B0</> \ufbab\u2800",
                      "postfix": "\u2800"
                    }
                },
                {
                    "type": "exit",
                    "style": "diamond",
                    "background": "p:exit-background", 
                    "background_templates": ["{{ if gt .Code 0 }}p:exiterror-background{{ end }}"],                   
                    "foreground": "p:foreground",                    
                    "trailing_diamond": "\uE0B0",
                    "properties": {
                      "always_enabled": true,
                      "template": "\uE23A",
                      "prefix": "<parentBackground>\uE0B0</> "
                    }
                }
            ]
        },
        {
          "type": "prompt",
          "alignment": "left",
          "newline": true,
          "segments": [
            {
              "type": "text",
              "style": "plain",
              "foreground": "default",
              "properties": {
                "prefix": "",
                "text": "\u276F",
                "postfix": ""
              }
            }
          ]
        }
    ],
    "palette": {
        "foreground": "#ffffff",
        "path-background": "#9145B6",
        "azure-background": "#008AD7",
        "git-background": "#F1502F",
        "dotnet-background": "#6CA35E",
        "exectime-background": "#83769c",
        "exit-background": "#2e9599",
        "exiterror-background": "#e91e63"
    }
}